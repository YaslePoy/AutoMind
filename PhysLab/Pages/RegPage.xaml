<Page x:Class="PhysLab.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PhysLab.Pages"
      mc:Ignorable="d"
      Title="RegPage" Height="450" Width="800">
    <Grid>
        <StackPanel Width="500">
            <TextBlock Margin="5, 0">Почта</TextBlock>
            <TextBox Name="LoginTB" Margin="5" Height="25"></TextBox>
            <TextBlock Margin="5, 0">Пароль</TextBlock>
            <PasswordBox Name="PasswordPB" Margin="5" Height="25"></PasswordBox>
            <TextBlock Margin="5, 0">Повторите пароль</TextBlock>
            <PasswordBox Name="RePasswordPB" Margin="5" Height="25"></PasswordBox>
            <TextBlock Margin="5, 0">Имя</TextBlock>
            <TextBox Name="NameTB" Margin="5" Height="25"></TextBox>
            <Button Margin="5" Click="Reg">Войти</Button>
        </StackPanel>
    </Grid>
</Page>